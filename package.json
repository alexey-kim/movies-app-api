{
  "$schema": "http://json.schemastore.org/package",
  "private": true,
  "name": "movies-app-api",
  "version": "1.0.0",
  "description": "Movies App APIs (Typescript / Inversify / Express / MongoDB)",
  "author": "Alexey Kim",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf build && tsfmt --replace && tslint --project tsconfig.json --format verbose",
    "build": "tsc --project tsconfig.json",
    "start": "nodemon --config nodemon.json",
    "start:localprod": "node build/main.js",
    "test": "node node_modules/.bin/jest --config jest.json",
    "pretest:cov": "rimraf coverage",
    "test:cov": "node node_modules/.bin/jest --config jest.json --coverage",
    "test:watch": "node --inspect=9239 node_modules/.bin/jest --config jest.json --runInBand --watchAll"
  },
  "dependencies": {
    "@typegoose/typegoose": "^7.4.6",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cli-color": "^2.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-http-context": "^1.2.4",
    "helmet": "^4.3.1",
    "http-status-codes": "^2.1.4",
    "inversify": "^5.0.5",
    "inversify-express-utils": "^6.3.2",
    "mongodb-memory-server": "^6.9.2",
    "mongoose": "5.10.18",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cli-color": "^2.0.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/mongoose": "^5.10.3",
    "@types/sinon": "^9.0.10",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.10",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "tslint-line-before-constructor": "^0.5.1",
    "tslint-lines-between-class-members": "^1.3.6",
    "typescript": "^4.1.3",
    "typescript-formatter": "^7.2.2"
  }
}
